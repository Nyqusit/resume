<header class="w3-bar w3-top w3-hide-large w3-black w3-xlarge">
  <span class="w3-bar-item">Register</span>
  <a href="javascript:void(0)" class="w3-right w3-bar-item w3-button" onclick="w3_open()"><i class="fa fa-bars"></i></a>
</header>
  <<div class="w3-main w3-white" style="margin-left:260px">
    <form class="form-signin" method="POST" action='/users/register' style="width:80%; margin:auto">
      <div class="text-center mb-3"style=" text-align: center; margin-left:2px; margin-right:auto" >
        <img class="mb-4" src="/docs/4.2/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        <hr style="visibility: hidden">
        <h1 class="h3 mb-3 font-weight-normal">Register</h1>

      <div class="form-label-group">
        <p><%=registerError%></p>

        <input type="text" name="firstName" class="form-control" placeholder="First Name" required autofocus>
        <label for="inputEmail"> </label>
      </div>

      <div class="form-label-group">
        <input type="text" name="lastName" class="form-control" placeholder="Last Name" required autofocus>
        <label for="inputEmail"> </label>
      </div>

      <div class="form-label-group">
        <input type="email" name="email" class="form-control" placeholder="Email address" required autofocus>
        <label for="inputEmail"> </label>
      </div>

      <div class="form-label-group">
        <input type="password" name="password" class="form-control" placeholder="Password" required>
        <label for="inputPassword"></label>
      </div>

      <div class="form-label-group">
        <input type="password" class="form-control" placeholder="confirmPassword" required>
        <label for="inputPassword"> </label>
      </div>
      <ul >
        <li style="text-align:left; font-size:15px">  must be at least four characters long</li>
      <li style="text-align:left; font-size:15px">  must contain a combination of numbers and letters</li>
      </ul>

      <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
      <p class="mt-5 mb-3 text-muted text-center">&copy; 2017-2018</p>
    </form>
  </div>
